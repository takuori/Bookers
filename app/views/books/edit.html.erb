<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <h4>Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", :books %>