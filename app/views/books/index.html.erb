<p id="notice"></p>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorが発生しました
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td>
      <%= book.title %>
     </td>
     <td>
      <%= book.body %>
     </td>
     <td>
      <%= link_to "show", book_path(book.id) %>
     </td>
     <td>
      <%= link_to "edit", edit_book_path(book.id) %>
     </td>
     <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
     </td>
    </tr>
    <% end %>
 </tbody>

</table>


<h2>New book</h2>


<%= form_with model: @book do |f| %>
 <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <h4>本文</h4>
  <%= f.text_area :body %>
 </div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>
